<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <!-- CustomerController Servlet -->
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>com.icbt.controller.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <!-- AdminLoginServlet -->
    <servlet>
        <servlet-name>AdminLoginController</servlet-name>
        <servlet-class>com.icbt.controller.AdminLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginController</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
     <!-- CarControllerServlet -->
    <servlet>
        <servlet-name>CarController</servlet-name>
        <servlet-class>com.icbt.controller.CarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarController</servlet-name>
        <url-pattern>/CarController</url-pattern>
    </servlet-mapping>
     <!-- DriverControllerServlet -->
     <servlet>
        <servlet-name>DriverController</servlet-name>
        <servlet-class>com.icbt.controller.DriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverController</servlet-name>
        <url-pattern>/driver</url-pattern>
    </servlet-mapping>
    
      <!-- BookingControllerServlet -->
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>com.icbt.controller.BookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>

</web-app>
